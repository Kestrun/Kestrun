  "components": {
    "schemas": {
      "ApiResult": {
        "required": [
          "success",
          "message"
        ],
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "OK"
          }
        },
        "additionalProperties": false
      },
      "GroupResult": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResult"
          },
          {
            "required": [
              "groupName"
            ],
            "type": "object",
            "properties": {
              "groupName": {
                "type": "string",
                "example": "Admins"
              }
            },
            "additionalProperties": false
          }
        ]
      },
      "OperationStartResult": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ApiResult"
          },
          {
            "required": [
              "taskId"
            ],
            "type": "object",
            "properties": {
              "taskId": {
                "type": "string",
                "example": "123"
              }
            },
            "additionalProperties": false
          }
        ]
      },
      "OperationStatusResult": {
        "type": "object",
        "properties": {
          "operationId": {
            "type": "string"
          },
          "taskId": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "startedAt": {
            "type": "string",
            "format": "date-time"
          },
          "completedAt": {
            "type": "string",
            "format": "date-time"
          },
          "progress": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "KestrunErrorResponse": {
        "required": [
          "status",
          "error",
          "reason",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "error": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "details": {
            "type": "string"
          },
          "exception": {
            "type": "string"
          },
          "stackTrace": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "method": {
            "type": "string"
          }
        }
      }
    },
    "parameters": {
      "level": {
        "name": "level",
        "in": "path",
        "description": "Log level",
        "required": true,
        "schema": {
          "enum": [
            "Trace",
            "Debug",
            "Information",
            "Warning",
            "Error",
            "Critical"
          ],
          "type": "string"
        },
        "example": "Information"
      },
      "groupName": {
        "name": "groupName",
        "in": "path",
        "description": "SignalR group name",
        "required": true,
        "schema": {
          "minLength": 1,
          "type": "string"
        },
        "example": "Admins"
      },
      "taskId": {
        "name": "taskId",
        "in": "path",
        "description": "Task identifier",
        "required": true,
        "schema": {
          "minLength": 1,
          "type": "string"
        },
        "example": "123"
      }
    }
  },
