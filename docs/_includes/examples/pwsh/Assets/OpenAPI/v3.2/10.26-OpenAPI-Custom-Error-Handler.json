{
  "openapi": "3.2.0",
  "info": {
    "title": "Orders API - Custom Error Handler",
    "description": "OpenAPI routes with a custom runtime error response script.",
    "version": "1.0.0"
  },
  "paths": {
    "/orders": {
      "post": {
        "tags": [
          "orders"
        ],
        "summary": "Create a new order.",
        "description": "Accepts an OpenAPI-described JSON request body and returns a created order. Invalid quantity\nraises a runtime exception to exercise the custom error response script.",
        "operationId": "createOrder",
        "requestBody": {
          "description": "Order payload",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Order created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderDto"
                }
              }
            }
          },
          "415": {
            "description": "Unsupported media type",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    },
    "/orders/{orderId}": {
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "Get an order by ID.",
        "description": "Returns a sample order payload and raises a runtime exception for order 13 to demonstrate\nthe custom PowerShell error response handler on an OpenAPI route.",
        "operationId": "getOrder",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "The order identifier from the route path.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderDto"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderDto": {
        "required": [
          "id",
          "sku",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Order identifier",
            "format": "int32",
            "example": 1001
          },
          "sku": {
            "type": "string",
            "description": "Item sku",
            "example": "SKU-RED-001"
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity requested",
            "format": "int32",
            "example": 2
          }
        },
        "additionalProperties": false
      },
      "ApiError": {
        "required": [
          "status",
          "title",
          "detail",
          "path",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "description": "HTTP status code",
            "format": "int32",
            "example": 500
          },
          "title": {
            "type": "string",
            "description": "Short error summary",
            "example": "Request failed"
          },
          "detail": {
            "type": "string",
            "description": "Detailed error message",
            "example": "Unhandled exception"
          },
          "path": {
            "type": "string",
            "description": "Request path",
            "example": "/orders/13"
          },
          "timestamp": {
            "type": "string",
            "description": "UTC timestamp",
            "format": "date-time",
            "example": "2026-02-17T10:11:12Z"
          }
        },
        "additionalProperties": false
      },
      "CreateOrderRequest": {
        "required": [
          "sku",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "sku": {
            "type": "string",
            "description": "Item sku",
            "example": "SKU-RED-001"
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity requested",
            "format": "int32",
            "example": 2
          }
        },
        "additionalProperties": false
      }
    }
  }
}
