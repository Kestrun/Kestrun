@page
@model RazorSample.Pages.HelloModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
</head>

<body>
    <h1>@Model.Title</h1>

    <p>Welcome, @Model.UserName!</p>
    <p>This page is powered by Razor and C#.</p>
    <p>Sentence of the day: @Model.SentenceOfTheDay</p>

    <p>Served at @DateTime.UtcNow.ToString("u")</p>
</body>

</html>
