    "/api/ps/event": {
      "get": {
        "tags": [
          "SignalR"
        ],
        "summary": "Broadcast a custom event to all connected SignalR clients.",
        "operationId": "SendPowerShellEvent",
        "responses": {
          "200": {
            "description": "Broadcasted a custom event",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
